doctype html(lang='en-US')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title My Title
    link(rel='stylesheet', href='styles/normalize.css')
    link(rel='stylesheet', href='styles/skeleton.css')
    link(rel='stylesheet', href='css/main.css')


body

    //if lt IE 9
      script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')

    .login
      h1 Please Login Or Register
      form
        label Enter Username
        input.userNameInput(type='text', name='username', placeholder='Username', required='required' )
        label Enter Password
        input.userPasswordInput(type='password', name='password', placeholder='Password' required='required')
        button.register Register
        input.loginButton(type='submit', name='login', value='Login')




    .loggedIn.hidden
      .profilePicture
        .appendedProfilePic
        label(for="profilePic") Enter a URL for your Profile Picture
        input(type="url" name="profilePic" placeholder="www.example.com")#profilePictureUrl
        button#submitProfilePic.
          +
      .profileContent
        .username
          label(for="username") Select a Username
          input(type="text")#username
        .email
          label(for="email") Email
          input(type="text")#userEmail
        .gender
          label(for="genderSelectDropdown") Select Your Gender
          select(name="genderSelectDropdown").genderSelect
            option Male
            option Female
        .description
          textarea(name="textarea" id="textarea" row="10" cols="50") What's your story...
          .profileButtons
            .row
              .six.columns
                button#saveProfileButton Save
              .six.columns
                button#resetProfileButton Reset











    .app.hidden
      img(src="https://svn.apache.org/repos/asf/openoffice/symphony/trunk/main/extras/source/gallery/symbols/Icon-Gear01-Grey.png")#matchesIcon
      #target
      .appButtons
        .row
          .six.columns
            button#dislikeButton Dislike
          .six.columns
            button#likeButton Like
    #userMatches.hidden
      button#doneMatchesButton.
        Done

    script(src='vendor/jquery.min.js')
    script(src='vendor/lodash.min.js')
    script(src='vendor/firebase.js')
    script(src='js/main.js')


